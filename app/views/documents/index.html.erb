<%= content_for :head do %>
  <style type="text/css">
    div.content.grid_12 {
      margin :0px;
      
    }
    span.folder_icon {
      background-image: url("/assets/themes/classic/d.png");
      width: 108px;
      height: 72px;
    }
    
    table {
      border : 1px solid #eee;
      border-collapse:collapse;
    }
    
    table, td, th
    {
      border:1px solid #eee;
    }
    
    tr.odd {
      background-color : white;
    }
    
    tr.even {
      background-color : #e0ffff;
    }
  </style>
  <%= stylesheet_link_tag "/assets/themes/classic/style.css" %>
  <%= javascript_include_tag "/assets/jquery.hotkeys.js" %>
  <%= javascript_include_tag "/assets/jquery.jstree.js" %>
<%end%>
<% if can? :create,[Folder,Document] %>
  <div class="add-asset" style="float:right">
    <%= link_to 'Add Document',"#",:class=>"btn addDocument" %>
  </div>
  
   <div class="add-asset" style="float:left">
      <%= link_to 'Add Folder',"#",:class=>"btn addFolder" %>
  </div>
<%end%>
<br/>
<br/>
<table class="table table-striped table-bordered table-condensed" id="table">
  <thead>
    <tr>
      <th> Name </th>
      <th> Uploaded At </th>
      <th> Last Modified At </th>
      <th> Extension </th>
      <th> Uploaded By</th>
    </tr>
  </thead>

  <tbody id="container">
    <%= render :partial => "asset" ,:collection => @assets ,:as => :asset %>
  </tbody>
</table>



<% if can? :create,[Folder,Document] %>
  <%= render :partial => "folders/new_folder" , :locals => {:folder => Folder.new ,:flash => flash} %>
  <%= render :partial => "new" ,:locals => {:document => Document.new ,:flash => flash} %>
<%end%>


<div class="modal" id="modal_container" style="display:none;">
  <div class="modal-header">
    <a class="close" data-dismiss="modal" data-cursor="true">×</a>
    <h2 style="color:red;">Error !!!</h2>
  </div>
  <div class="modal-body">
    <p class="error">One fine body…</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-cursor="true">Close</a>
  </div>
</div>


<!-- TODO write something Better like remote => true for folder instead of the given way -->
<%= javascript_tag  do %>
  $(document).ready(function() {
      $("table#table").delegate("a.folder","click",function(event) {
          event.preventDefault();
     
          $.ajax({
             "url" : $(this).attr("href"),
             "type" : "GET",
             "success" : function(html) {
                $("tbody#container").html(html);
             },
             "error" : function(jqXHR, textStatus, errorThrown) {
                $("div.modal-body").find('p.error').html(textStatus ||  errorThrown);
                $("div#modal_container").modal('show');        
             }
          })
      })
    
      $("div.modal").delegate("a","click",function(event) {
         $("div#modal_container").modal('hide');
      })
      
      $("a[data-cursor=true]").css({"cursor":"pointer"});
      
      $("#fileTree").jstree({
        "json_data"  : {
          "data" : <%= raw folders_structure %>
        },
       "themes" : {
          "theme" : "classic",
          "dots" : true,
          "icons" : true
       },
      "plugins" : ["themes",  "json_data" ,"ui"]
     })
      
  })
<%end%>





